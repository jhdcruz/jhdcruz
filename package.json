	"homepage": "https://jhdcruz.pages.dev",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "astro dev",
		"dev:wr": "wrangler pages dev ./dist",
		"build": "astro check && astro build",
		"preview": "astro preview",
		"astro": "astro",
		"fmt": "biome format --write --no-errors-on-unmatched src/",
		"fmt:unsafe": "biome check --fix --unsafe",
		"prepare": "husky"
	},
	"dependencies": {
		"@astrojs/check": "0.9.4",
		"@astrojs/cloudflare": "12.2.0",
		"@astrojs/partytown": "2.1.3",
		"@astrojs/sitemap": "3.2.1",
		"@astrojs/solid-js": "5.0.4",
		"@astrojs/tailwind": "5.1.5",
		"@tabler/icons-solidjs": "3.28.1",
		"astro": "5.1.8",
		"astro-icon": "1.1.5",
		"flowbite": "2.5.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@cloudflare/workers-types": "4.20250109.0",
		"@iconify-json/tabler": "1.2.14",
		"husky": "9.1.7",
		"lint-staged": "15.4.1",
		"solid-js": "1.9.4",
		"tailwindcss": "3.4.17",
		"typescript": "5.7.3",
		"wrangler": "3.103.2"
	},
	"lint-staged": {
		"*.{astro,svelte,js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --fix --unsafe",
			"biome format --write --no-errors-on-unmatched"
		]
	},
	"pnpm": {
		"onlyBuiltDependencies": ["@biomejs/biome", "esbuild", "sharp", "workerd"]
	}
}
