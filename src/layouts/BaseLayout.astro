---
import { SEO } from 'astro-seo';
import Nav from '@/components/Nav.astro';
import "@fontsource/cantarell"
---

<html lang="en" class="bg-light dark:bg-dark smooth-scroll">
  <head>
    <meta charset="UTF-8" />
    <SEO
      title="Joshua Hero Dela Cruz | @jhdcruz"
      description="A software developer who loves to build software, obviously."
      extend={{
        link: [{ rel: 'icon', href: '/favicon.ico' }],
        meta: [
          {
            name: 'viewport',
            content: 'width=device-width',
          },
          {
            httpEquiv: 'X-UA-Compatible',
            content: 'IE=edge',
          },
        ],
      }}
    />
  </head>

  <body class="font-display">
    <style is:global>
      @tailwind base;
      @tailwind components;
      @tailwind utilities;
    </style>

    <Nav />

    <main class="text-matte dark:text-light">
      <slot />
    </main>

    <script defer src="https://code.iconify.design/2/2.2.1/iconify.min.js"></script>
    <script defer type="text/partytown" src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "e8a4e8aa4bbb48639771ca46680f08e7"}'></script>
  </body>
</html>
